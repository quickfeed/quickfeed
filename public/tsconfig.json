{
  "compilerOptions": {
    "target": "ES2022",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "jsx": "react",
    "newLine": "LF",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
  },
  "include": [
    "src/**/*"
  ]
}
