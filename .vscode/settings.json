{
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.inlineSuggest.enabled": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "breadcrumbs.enabled": true,
    "protoc": {
        "compile_on_save": false,
        "options": [
            "--proto_path=${workspaceFolder}",
            "--proto_path=${workspaceFolder}/kit/score/",
            "--proto_path=`go list -m -f {{.Dir}} google.golang.org/protobuf`",
            "--proto_path=`go list -m -f {{.Dir}} github.com/alta/protopatch`"
        ]
    },
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "go.useLanguageServer": true,
    "gopls": {
        "gofumpt": true,
        "build.directoryFilters": [
            "-public",
            "-doc",
            "-dev",
        ],
        // Add parameter placeholders when completing a function.
        "usePlaceholders": true,
    },
    "clang-format.executable": "/usr/bin/clang-format",
    "clang-format.style": "{ IndentWidth: 4, BasedOnStyle: google, AlignConsecutiveAssignments: true, ColumnLimit: 120 }",
    "cSpell.enableFiletypes": [
        "plaintext"
    ],
    "markdownlint.config": {
        "MD024": false,
        "default": true,
        "no-hard-tabs": {
            "code_blocks": false
        }
    },
    "eslint.alwaysShowStatus": true,
    "eslint.format.enable": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "typescript.implementationsCodeLens.enabled": true,
    "typescript.referencesCodeLens.enabled": true,
    "typescript.suggest.completeFunctionCalls": true,
    "typescript.format.enable": true,
    "typescript.autoClosingTags": true,
    "typescript.format.semicolons": "remove",
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[proto3]": {
        "editor.defaultFormatter": "zxh404.vscode-proto3"
    },
    "yaml.format.enable": true,
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": true,
    },
    "cSpell.enabled": true,
}
